<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <!--LAYOUT REPO DATA 70%SCREEN //INIT-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20px"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_pull_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:text="Titulo do Pull Request"
            android:textAlignment="textStart"
            android:textColor="@color/colorTitle"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_pull_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição do repositório "
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image_pull"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_username_pull"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="username"
                    android:textColor="@color/colorTitle" />

                <TextView
                    android:id="@+id/text_realname_pull"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="Nome Sobrenome"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <!--LAYOUT REPO DATA 70%SCREEN //END-->


</LinearLayout>
