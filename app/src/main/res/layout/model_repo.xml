<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <!--LAYOUT REPO DATA 70%SCREEN //INIT-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:layout_marginLeft="20px"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_repo_name"
            android:textColor="@color/colorTitle"
            android:text="Nome Repositório"
            android:layout_marginTop="50px"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_repo_description"
            android:textColor="@color/colorPrimary"
            android:text="Descrição do repositório "
            android:textAlignment="textStart"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        
        <LinearLayout
            android:layout_marginTop="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fork"
                />
            <TextView
                android:id="@+id/text_fork_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorItens"
                android:text="00"
                android:textStyle="bold"
                android:textSize="15dp"
                />

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star"
                />
            <TextView
                android:id="@+id/text_star_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorItens"
                android:text="00"
                android:textStyle="bold"
                android:textSize="15dp"
                />

        </LinearLayout>
        
    </LinearLayout>
    <!--LAYOUT REPO DATA 70%SCREEN //END-->


    <!--LAYOUT USER DATA 30%SCREEN //INIT-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="50px"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/text_username"
            android:textColor="@color/colorTitle"
            android:text="username"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_realname"
            android:textColor="@color/colorPrimaryLight"
            android:text="Nome Sobrenome"
            android:textSize="10dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <!--LAYOUT USER DATA 30%SCREEN //END-->

</LinearLayout>
